#!/usr/bin/env ruby

require './lib/MyoMidiServer.rb'


myo_midi = MyoMidi.new

=begin
MyoMidiServer.start_server(6969, 1, false) do |mess|
    me = YAML.load(mess)
    myo_midi.process_event(me)
end
=end

EventMachine::run {
    EventMachine::start_server "0.0.0.0", 6969, MyoServer
    puts 'running echo server on 6969'
}

